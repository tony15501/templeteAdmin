        <!--=== Content Part ===-->
        <div class="container content">
            <!-- Service Blocks -->
            <div class="row margin-bottom-30">
                <div class="col-md-4">
                    <div class="service">
                        <i class="fa fa-compress service-icon"></i>
                        <div class="desc">
                            <!-- <h4>Servicio 1</h4> -->
                            <p><%= servicio(1) %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service">
                        <i class="fa fa-cogs service-icon"></i>
                        <div class="desc">
                            <!-- <h4>Servicio 2</h4> -->
                            <p><%= servicio(2) %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service">
                        <i class="fa fa-rocket service-icon"></i>
                        <div class="desc">
                            <!-- <h4>Servicio 3</h4> -->
                            <p><%= servicio(3) %></p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Service Blokcs -->

            <!-- Recent Works -->
            <div class="headline"><h2>Recent Works</h2></div>
            <div class="row margin-bottom-20">

                <% Project.order("id DESC").limit(4).each do |project| %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnails thumbnail-style thumbnail-kenburn">
                        <div class="thumbnail-img">
                            <div class="overflow-hidden">
                                <img class="img-responsive" src="<%= project.image %>" alt="">
                            </div>
                            <a class="btn-more hover-effect" href="#">read more +</a>
                        </div>
                        
                        <div class="caption">
                            <!-- <h3><a class="hover-effect" href="#">Project One</a></h3> -->
                            <p><%= project.title %>.</p>
                            <p><%= project.content %>.</p>
                        </div>

                    </div>
                </div>
                 <% end %>
               
            </div>
            <!-- End Recent Works -->
            <!-- Portfolio Sorting Blocks -->
            <div class="sorting-block">
                <ul class="sorting-nav sorting-nav-v1 text-center">
                    <li class="filter" data-filter="all">All
                    </li>
                    <% Category.all.each do |c| %>
                    <li class="filter" data-filter="<%=c.name.downcase.gsub(" ","")%>"><%=c.name %>
                    </li>
                    <% end %>
                </ul>
                <ul class="col sorting-grid">
                    <% Project.all.each do |project| %>
                    <li class="col-md-3 col-sm-6 col-xs-12 mix <%= project.category.name.downcase.gsub(" ","") %>" data-cat="1">
                        <a href="#">
                            <img class="img-responsive" src="<%= project.image %>" alt="">
                            <span class="sorting-cover">
                            <span><%= project.title  %></span>
                            <p><%= project.content  %></p>
                            </span>
                        </a>
                    </li>
                    <% end %>
                    
                </ul>
                
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
                    <!-- End Portfolio Sorting Blocks -->